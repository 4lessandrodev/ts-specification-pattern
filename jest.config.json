{
    "collectCoverageFrom": [
        "<rootDir>/**/*.ts",
        "**/tests/**'",
        "<rootDir>/src/**/*.spec.ts",
        "<rootDir>/**/*.spec.ts",
        "<rootDir>/src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
        "\\\\node_modules\\\\"
    ],
    "coverageProvider": "v8",
    "roots": [
        "<rootDir>/"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
        "\\\\node_modules\\\\"
    ],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ]
}